            <ImageView
                android:id="@+id/btnFav"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_favorite_24"
                android:tint="#5D4037"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>

